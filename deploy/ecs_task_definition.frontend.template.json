{
    "networkMode": "awsvpc",

    "cpu": "1024",
    "executionRoleArn": "${EXECUTION_ROLE}",
    "taskRoleArn": "${EXECUTION_ROLE}",
    "volumes": [],
    "memory": "2048",
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "tags": [
        {
           "key": "Environment",
           "value": "${ENVIRONMENT_NAME}"
        },
        {
            "key": "Description",
            "value": "ECS Risk Analytics frontend Task Definition"
        },
        {
            "key": "Terraform",
            "value": "false"
        },
        {
            "key": "Squad",
            "value": "riskanalytics"
        },
		{
            "key": "dsg.io/asset",
            "value": "car-218"
        },
        {
            "key": "Market",
            "value": "Aerospace"
        }
     ],

    "containerDefinitions": [
        {
            "environment": [
                {
                    "name": "DOTNET_ENVIRONMENT",
                    "value": "${ENVIRONMENT_NAME}"
                }
            ],
            "name": "riskanalyticsfrontend",
            "mountPoints": [],
            "secrets": [],
            "image": "${FRONTEND_IMAGE_NAME}",
            "logConfiguration": {
                "logDriver": "awsfirelens"
            },
            "portMappings": [
                {
                    "containerPort": 8053,
                    "hostPort": 8053,
                    "protocol": "tcp"
                }
            ],
            "dependsOn": [],
            "command": [],
            "essential": true,
            "volumesFrom": []
        },
        {
            "environment": [
                {
                    "name"  : "AWS_REGION",
                    "value" : "eu-west-1"
                  },
                {
                    "name"  : "LOG_GROUP_NAME",
                    "value" : "/ecs/riskanalyticsfrontend"
                },
                {
                    "name"  : "HTTP_USER",
                    "value" : "878209"
                },
                {
                    "name"  : "REMOVE_KEYS",
                    "value" : "container_id,ecs_task_arn"
                },
                {
                    "name"  : "LABELS",
                    "value" : "cluster=ascend,job=riskanalytics-frontend,env=ascend-${ENVIRONMENT_NAME}"
                },
                {
                    "name"  : "LABEL_KEYS",
                    "value" : "$${q}ecs_cluster,$${q}container_name"
                }
            ],
            "name": "log_router",
            "image": "${FLUENTBIT_IMAGE_NAME}",
            "mountPoints": [],
            "secrets": [
                {
                    "valueFrom" : "${ENVIRONMENT_NAME}_riskanalytics_fluentbit_grafana",
                    "name": "HTTP_PASSWD"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-region": "eu-west-1",
                    "awslogs-stream-prefix": "riskanalytics",
                    "awslogs-multiline-pattern" : "(?:DEBUG:|INFO:|WARN:|ERROR:|FATAL:)",
                    "awslogs-group": "/ecs/riskanalyticsfrontend"
                }
            },
            "firelensConfiguration" : {
                "type" : "fluentbit",
                "options" : {
                  "enable-ecs-log-metadata" : "true",
                  "config-file-type"        : "file",
                  "config-file-value"       : "/logDestinationBoth.conf"
                }
            },
            "command": [],
            "essential": true,
            "volumesFrom": []
        }
    ]
}
