{
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
		{
				"name": "Launch Chrome",
				"request": "launch",
				"type": "pwa-chrome",
				"url": "https://riskanalytics.local.aea.cirium.dev:8053/",
				"webRoot": "${workspaceFolder}/src/frontend"
		},
		{
            "name": "Docker .NET Attach",
            "type": "coreclr",
            "request": "attach",
            "processName": "RiskAnalytics.Api",
            "pipeTransport": {
                "pipeProgram": "docker",
                "pipeArgs": ["exec", "-i", "riskanalytics_api"],
                "debuggerPath": "/remote_debugger/vsdbg",
                "pipeCwd": "${workspaceRoot}/src/api/RiskAnalytics.Api",
                "quoteArgs": false
            },
            "sourceFileMap": {
                "/src/": "${workspaceFolder}/src/api"
            }
        }
    ]
}
